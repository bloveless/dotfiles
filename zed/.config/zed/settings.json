// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
// For reference: https://romanzipp.com/blog/must-have-zed-settings
{
  "outline_panel": {
    "dock": "right"
  },
  "bottom_dock_layout": "contained",
  "assistant": {
    "default_model": {
      "model": "copilot",
      "provider": "copilot_chat"
    },
    "version": "2"
  },
  "auto_install_extensions": {
    "catppuccin-icons": true,
    "golangci-lint": true,
    "tokyo-night": true
  },
  "buffer_font_family": "Monaspace Argon",
  "buffer_font_size": 13,
  "edit_predictions": {
    "enabled_in_assistant": false,
    "mode": "subtle"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "file_types": {
    "Blade": ["*.blade.php"],
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml"
    ],
    "SQL": ["ddl", "dml"]
  },
  "icon_theme": "Catppuccin Macchiato",
  "languages": {
    "Go": {
      "language_servers": ["gopls", "golangci-lint"]
    },
    "JSON": {
      "prettier": {
        "allowed": false
      },
      "tab_size": 2
    },
    "JSONC": {
      "tab_size": 2
    },
    "JavaScript": {
      "formatter": {
        "external": {
          "arguments": ["prettier", "--stdin-filepath", "{buffer_path}"],
          "command": "npx"
        }
      }
    },
    "Markdown": {
      // do not remove any trailing whitespace since line breaks in
      // lists (without adding a new punctuation) rely on whitespaces.
      "remove_trailing_whitespace_on_save": false,
      // Wrap text according to the previously defined preferred line length.
      "soft_wrap": "preferred_line_length"
    },
    "PHP": {
      "prettier": {
        "allowed": false
      }
    },
    "Proto": {
      "format_on_save": "off",
      "formatter": {
        "external": {
          "arguments": ["format", "{buffer_path}"],
          "command": "buf"
        }
      }
    },
    "SQL": {
      "format_on_save": "off"
    },
    "YAML": {
      "tab_size": 2
    }
  },
  "lsp": {
    "golangci-lint": {
      "initialization_options": {
        "command": ["golangci-lint", "run", "--output.json.path=stdout", "--show-stats=false", "--issues-exit-code=1"]
      }
    },
    "gopls": {
      "initialization_options": {
        "gofumpt": true,
        "local": "github.com/bayer-int,github.com/shadowglass-xyz,github.com/bloveless"
      }
    }
  },
  "preferred_line_length": 120,
  "project_panel": {
    "indent_size": 10
  },
  "show_edit_predictions": true,
  "show_whitespaces": "selection",
  "wrap_guides": [120],
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "tab_size": 4,
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_diagnostics": "all"
  },
  "theme": {
    "dark": "One Dark",
    "light": "One Light",
    "mode": "system"
  },
  "ui_font_family": "Monaspace Argon",
  "ui_font_size": 12,
  "use_multiline_find": true,
  "vertical_scroll_margin": 15,
  "vim": {
    "use_smartcase_find": true,
    "use_system_clipboard": "always"
  },
  "vim_mode": true
}
