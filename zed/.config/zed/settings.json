// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
// For reference: https://romanzipp.com/blog/must-have-zed-settings
{
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_assistant": false
  },
  "theme": "Ros√© Pine Moon",
  "icon_theme": "Catppuccin Macchiato",
  "file_types": {
    "Blade": ["*.blade.php"],
    "SQL": ["ddl", "dml"],
    "Helm": ["**/templates/**/*.tpl", "**/templates/**/*.yaml", "**/templates/**/*.yml", "**/helmfile.d/**/*.yaml", "**/helmfile.d/**/*.yml"]
  },
  "auto_install_extensions": {
    "tokyo-night": true,
    "catppuccin-icons": true,
    "golangci-lint": true
  },
  "show_edit_predictions": true,
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "vim_mode": true,
  "use_multiline_find": true,
  "vertical_scroll_margin": 15,
  "vim": {
    "use_smartcase_find": true
  },
  "buffer_font_family": "MonoLisa",
  "ui_font_family": "MonoLisa",
  "ui_font_size": 12,
  "buffer_font_size": 12,
  "show_whitespaces": "selection",
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_diagnostics": "all"
  },
  "tab_size": 4,
  "project_panel": {
    "indent_size": 10
  },
  "preferred_line_length": 160,
  "languages": {
    "JSON": {
      "tab_size": 2,
      "prettier": {
        "allowed": false
      }
    },
    "JSONC": {
      "tab_size": 2
    },
    // "PHP": {
    //    "language_servers": ["intelephense", "!phpactor", "..."]
    // },
    "YAML": {
      "tab_size": 2
    },
    "Proto": {
      "formatter": {
        "external": {
          "command": "buf",
          "arguments": ["format", "{buffer_path}"]
        }
      },
      "format_on_save": "off"
    },
    "Markdown": {
      // Wrap text according to the previously defined preferred line length.
      "soft_wrap": "preferred_line_length",

      // do not remove any trailing whitespace since line breaks in
      // lists (without adding a new punctuation) rely on whitespaces.
      "remove_trailing_whitespace_on_save": false
    },
    "SQL": {
      "format_on_save": "off"
    },
    "Go": {
      "language_servers": ["gopls", "golangci-lint"]
    }
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "gofumpt": true,
        "local": "github.com/bayer-int,github.com/shadowglass-xyz,github.com/bloveless"
      }
    },
    "golangci-lint": {
      "initialization_options": {
        "command": ["golangci-lint", "run", "--output.json.path=stdout", "--show-stats=false", "--issues-exit-code=1"]
      }
    },
    "intelephense": {
      "settings": {
        "files": {
          "maxSize": 3000000,
          "associations": ["**/*.php"],
          "exclude": ["**/.git/**", "**/node_modules/**", "**/vendor/**", "**/vendors/**"]
        },
        "diagnostics": {
          "typeErrors": true,
          "undefinedClassConstants": true,
          "undefinedConstants": true,
          "undefinedFunctions": true,
          "undefinedMethods": true,
          "undefinedProperties": true,
          "undefinedSymbols": true,
          "undefinedTypes": true
        },
        "environment": {
          "phpVersion": "8.2.0",
          "shortOpenTag": false,
          "includePaths": []
        },
        "format": {
          "enable": true,
          "braces": "psr12"
        },
        "maxMemory": 512,
        "references": {
          "exclude": ["**/.git/**", "**/node_modules/**", "**/vendor/**", "**/vendors/**"]
        },
        "rename": {
          "exclude": ["**/.git/**", "**/node_modules/**", "**/vendor/**", "**/vendors/**"]
        }
      }
    }
  }
}
